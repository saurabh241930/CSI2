<!-- Large modal -->

<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title" id="exampleModalLabel">Register for CSI</h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
           <form class = "ui form" action = '/register' method = "post">
                <div style="margin-top:10px; font-size:20px">
                   <label>Enter your PID</label>
                   <input  style="margin-top:20px;
                            text-align:center;" 
                    class="form-control" type = 'text' name = 'username' placeholder = 'PID'>
                </div>
                <div style="margin-top:10px; font-size:20px">
                      <label>Enter your Password</label>
                       <input  style="margin-top:20px;
                                text-align:center;" 
                        class="form-control" type = 'password' name = 'password' placeholder = 'PID Password'>
                </div>
               <div style="margin-top:10px; font-size:20px">
               <label>Enter your Name</label>
               <input  style="margin-top:20px;
                        text-align:center;" 
                class="form-control" type = 'text' name = 'StudentName' placeholder = 'Full name'>
               </div>
      
                <div style="margin-top:10px; font-size:20px">
                 <label>Enter your Mobile no.</label>
                 <input  style="margin-top:20px;
                          text-align:center;" 
                  class="form-control" type = 'number' name = 'MobileNumber' placeholder = 'MobileNumber'>
                </div>
      
                <div>
                 <label>Gender :</label>
                     <select style="margin-top:20px;
                                    text-align:center"
                             name="Gender">

                    <option value="Male">Male</option>
                    <option value="Female">Female</option>

              </select>
            </div>
      
      
       <div>
         <label>Branch :</label>
             <select style="margin-top:20px;
                            text-align:center"
                     name="Class">

            <option value="F.E - Computer Engineering">F.E - Computer Engineering</option>
            <option value="F.E - IT Engineering">F.E - IT Engineering</option>
            <option value="F.E - EXTC Engineering">F.E - EXTC Engineering</option>  
            <option value="S.E - Computer Engineering">S.E - Computer Engineering</option>
            <option value="S.E - IT Engineering">S.E - IT Engineering</option>
            <option value="S.E - EXTC Engineering">S.E - EXTC Engineering</option>
            <option value="T.E - Computer Engineering">T.E - Computer Engineering</option>
            <option value="T.E - IT Engineering">T.E - IT Engineering</option>
         </select>
       </div>
             
       <div>
         <input  style="margin-top:20px;
                  text-align:center;" 
          class="form-control" type = 'number' name = 'RollNumber' placeholder = 'Roll No.'>
      </div>
      
 
         <button style="background-color:rgb(0, 51, 153);
                          color:white;
                          width:100%;
                          border:solid 2px rgb(0, 51, 153);
                          margin-top:20px;
                          height:40px;
                          font-size:20px"  >Sign Up</button>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        
      </div>
    </div>
  </div>
</div>
    



